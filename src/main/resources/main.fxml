<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projectuexcel.ui.MainController">

  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" pickOnBounds="false" prefHeight="600.0" prefWidth="733.0" VBox.vgrow="ALWAYS">
      <children>
            <TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Plan">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="pathPlan" layoutX="74.0" layoutY="43.0" prefHeight="25.0" prefWidth="376.0" promptText="Path to plan" />
                              <Button fx:id="choosePlan" layoutX="592.0" layoutY="43.0" mnemonicParsing="false" onAction="#selectTable" text="Choose plan" />
                              <Button layoutX="74.0" layoutY="97.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" text="Send origin to all" />
                              <Button layoutX="214.0" layoutY="97.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" text="Send part to all" />
                              <Button layoutX="214.0" layoutY="262.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" text="Export all" onAction="#exportAll"/>
                              <Button layoutX="354.0" layoutY="262.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" text="Export one" onAction="#exportOne"/>
                              <Button layoutX="354.0" layoutY="97.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="140.0" text="Send part to one" />
                              <RadioButton fx:id="selectYear" layoutX="74.0" layoutY="198.0" mnemonicParsing="false" selected="true" text="year">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="partition" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="selectFirstSemester" layoutX="214.0" layoutY="198.0" mnemonicParsing="false" text="1" toggleGroup="$partition" />
                              <RadioButton fx:id="selectSecondSemester" layoutX="354.0" layoutY="198.0" mnemonicParsing="false" text="2" toggleGroup="$partition" />
                           </children></AnchorPane>
                  </content>
                </Tab>
                  <Tab text="View emails">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                            </children></AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
      </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
    </AnchorPane>
  </children>
</VBox>

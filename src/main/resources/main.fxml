<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.HTMLEditor?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projectuexcel.ui.MainController">

  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" pickOnBounds="false" prefHeight="600.0" prefWidth="733.0" VBox.vgrow="ALWAYS">
      <children>
            <TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Plan">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="pathPlan" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="619.0" promptText="Path to plan" />
                              <Button fx:id="choosePlan" layoutX="646.0" layoutY="14.0" mnemonicParsing="false" onAction="#selectTable" prefHeight="25.0" prefWidth="140.0" text="Choose plan" />
                              <Button layoutX="646.0" layoutY="67.0" mnemonicParsing="false" onAction="#sendOriginToAll" prefHeight="60.0" prefWidth="140.0" text="Send origin to all" />
                              <Button layoutX="646.0" layoutY="127.0" mnemonicParsing="false" onAction="#sendAll" prefHeight="60.0" prefWidth="140.0" text="Send part to all" />
                              <Button layoutX="646.0" layoutY="497.0" mnemonicParsing="false" onAction="#exportAll" prefHeight="60.0" prefWidth="140.0" text="Export all" />
                              <Button layoutX="646.0" layoutY="437.0" mnemonicParsing="false" onAction="#exportOne" prefHeight="60.0" prefWidth="140.0" text="Export one" />
                              <Button layoutX="646.0" layoutY="187.0" mnemonicParsing="false" onAction="#sendOne" prefHeight="60.0" prefWidth="140.0" text="Send part to one" />
                              <RadioButton fx:id="selectYear" layoutX="661.0" layoutY="264.0" mnemonicParsing="false" selected="true" text="year">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="partition" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="selectFirstSemester" layoutX="661.0" layoutY="294.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="116.0" text="1st semester" toggleGroup="$partition" />
                              <RadioButton fx:id="selectSecondSemester" layoutX="661.0" layoutY="323.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="96.0" text="2nd semester" toggleGroup="$partition" />
                              <HTMLEditor fx:id="text" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" layoutX="14.0" layoutY="105.0" prefHeight="452.0" prefWidth="619.0" />
                              <TextField fx:id="subject" layoutX="14.0" layoutY="67.0" prefHeight="25.0" prefWidth="619.0" promptText="Subject" />
                           </children></AnchorPane>
                  </content>
                </Tab>
                  <Tab text="View emails">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="codeMailTableView" layoutX="14.0" layoutY="67.0" prefHeight="376.0" prefWidth="395.0">
                                <columns>
                                  <TableColumn fx:id="codeColumn" prefWidth="120.0" text="Code" />
                                  <TableColumn fx:id="emailColumn" prefWidth="274.0" text="Email" />
                                </columns>
                              </TableView>
                              <TextField fx:id="filter" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="260.0" promptText="Search code" />
                              <Button layoutX="287.0" layoutY="14.0" mnemonicParsing="false" onAction="#changeEmails" prefHeight="25.0" prefWidth="122.0" text="Change email file" />
                              <Button layoutX="418.0" layoutY="454.0" mnemonicParsing="false" onAction="#addCodeMail" text="Add" />
                              <TextField fx:id="addCode" layoutX="14.0" layoutY="454.0" prefHeight="25.0" prefWidth="121.0" promptText="Code" />
                              <TextField fx:id="addEmail" layoutX="140.0" layoutY="454.0" prefHeight="25.0" prefWidth="269.0" promptText="Email" />
                           </children></AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
      </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
    </AnchorPane>
  </children>
</VBox>
